---
import { getCollection } from "astro:content";
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getCollection("post");
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hello World!</h1>
		<p class="mb-4">
			Hi! I am Caglar!. I am tech guy who focused on Information security and using this blog to write my opinions about life on earth.
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	<section class="mt-16">
		<h2 class="title mb-4 text-xl">Papers</h2>
		<ul class="space-y-4 sm:space-y-2">
			<li>
				<a
					href="https://www.researchgate.net/publication/318860805_Obfuscating_Malware_through_Cache_Memory_Architecture_Features"
					target="_blank"
					rel="noopener noreferrer"
					class="cactus-link inline-block"
					>Obfuscating Malware through Cache Memory Architecture Features
				</a>
			</li>
			<li>
				<a
					href="https://www.researchgate.net/publication/318861760_AccessControl_The_definitive_guide_of_covert_channel_and_its_countermeasures"
					target="_blank"
					rel="noopener noreferrer"
					class="cactus-link inline-block"
					>AccessControl++: The definitive guide of covert channel and its countermeasures
				</a>
			</li>
			<li>
				<a
					href="https://www.researchgate.net/publication/318861089_Mallet's_Adventure_in_Androidland"
					target="_blank"
					rel="noopener noreferrer"
					class="cactus-link inline-block"
					>Mallet's Adventure in Androidland
				</a>
			</li>
			<li>
				<a
					href="https://www.researchgate.net/publication/318861834_Targeted_and_passive_Malware_self-defense"
					target="_blank"
					rel="noopener noreferrer"
					class="cactus-link inline-block"
					>Targeted and passive Malware self-defense
				</a>
			</li>
			<li>
				<a
					href="https://www.researchgate.net/publication/318877032_Architectural_Security_Approach_of_SCADA_Systems_Caglar_SAYIN"
					target="_blank"
					rel="noopener noreferrer"
					class="cactus-link inline-block"
					>Architectural Security Approach of SCADA Systems
				</a>
			</li>
		</ul>
	</section>
</PageLayout>
